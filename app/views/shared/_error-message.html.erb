<div class="text-red-400 text-sm">
  <% if obj.errors.any? %>
    <h2>The following errors prevented the <%=obj.class %> from being saved:</h2>
    <ul class = 'list-disc  pl-8'>
      <% obj.errors.full_messages.each do |error| %>
        <li class = ''><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>
