
<div class="text-red-400 text-sm my-4">
  <% if @channel.errors.any? %>
    <h2>The following errors prevented the category from being saved:</h2>
    <ul class = 'list-disc  pl-8'>
      <% @channel.errors.full_messages.each do |error| %>
        <li class = ''><%= error %></li>
      <% end %>
    </ul>
  <% end %>
</div>

<%= form_with model:@channel,data:{turbo:false} do |f|%>
  <%= f.text_field :name, placeholder:'Channel Name...' %>

  <%= f.submit 'Create Channel'%>
<%end%>
